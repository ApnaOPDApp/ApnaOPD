<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retailer.RetailerActivity">

    <include layout="@layout/app_bar_patient"
        android:id="@+id/app_bar_retailer"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_height="match_parent"
            >


        <RelativeLayout

            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#9ae1dfdf"
            android:id="@+id/retailer_cv1"
            >

            <ImageView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_assignment_black_24dp"
                android:id="@+id/iv_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_1"
                android:textColor="@color/primary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_1"
                android:layout_marginLeft="25dp"
                android:text="Prescription List"
                />

            <TextView
                android:clickable="true"
                android:id="@+id/desc_1"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@id/iv_1"
                android:layout_marginTop="10dp"
                android:textColor="#807f7f"
                android:inputType="textMultiLine"
                android:text="@string/med_presc" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/navigate_next"
                android:id="@+id/iv_nav_4"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/retailer_cv2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#9ae1dfdf"
            >

            <ImageView
                android:layout_width="85dp"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_local_shipping_black_24dp"
                android:id="@+id/iv_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_2"
                android:textColor="@color/primary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/iv_2"
                android:layout_marginLeft="25dp"
                android:text="@string/confirmed_orders"
                />
            <TextView
                android:clickable="true"
                android:id="@+id/desc_2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_2"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/iv_2"
                android:layout_marginTop="10dp"
                android:textColor="#807f7f"
                android:inputType="textMultiLine"
                android:text="@string/det_con_ord" />
            <ImageView
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/navigate_next"
                android:id="@+id/iv_nav_2"
                />

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/retailer_cv3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#9ae1dfdf"
                >

                <ImageView
                    android:layout_width="85dp"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_local_hospital_black_24dp"
                    android:id="@+id/iv_3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_3"
                    android:textColor="@color/primary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/iv_3"
                    android:layout_marginLeft="25dp"
                    android:text="Edit your Profile"
                    />
                <TextView
                    android:clickable="true"
                    android:id="@+id/desc_3"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_3"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@id/iv_3"
                    android:layout_marginTop="10dp"
                    android:textColor="#807f7f"
                    android:inputType="textMultiLine"
                    android:text="Edit your retailers profile and provide the address of your shop" />
                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/navigate_next"
                    android:id="@+id/iv_nav_3"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>