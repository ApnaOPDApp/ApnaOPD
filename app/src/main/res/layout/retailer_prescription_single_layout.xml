<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/m1"
        android:id="@+id/retailer_list_prescr_patient_pic"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_toRightOf="@id/retailer_list_prescr_patient_pic"
        android:layout_marginLeft="10dp"
        android:text="Display Name"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/retailer_list_prescr_patient_name"
        />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/retailer_list_prescr_patient_name"
        android:layout_toRightOf="@id/retailer_list_prescr_patient_pic"
        android:layout_marginLeft="10dp"
        android:inputType="textMultiLine"
        android:id="@+id/retailer_list_prescr_address"
        android:text="Address of patient"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_toRightOf="@id/retailer_list_prescr_address"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="offer"
            android:id="@+id/retailer_list_prescr_offer"
            android:background="@color/apple_green"
            />
        <Button
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:id="@+id/retailer_list_prescr_decline"
            android:background="@color/apple_red"
            />


    </LinearLayout>


</RelativeLayout>