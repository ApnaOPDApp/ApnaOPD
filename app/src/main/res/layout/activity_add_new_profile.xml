<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewProfileActivity">

    <include layout="@layout/app_bar_patient"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/add_new_prof_ll_layout"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/add_new_prof_ll_layout_card1"
                android:background="#9ae1dfdf"
                android:layout_height="120dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:background="@drawable/c1"
                android:padding="20dp"
                android:id="@+id/d_card1"
                android:layout_gravity="center_vertical"
                android:layout_height="85dp"
                android:src="@drawable/d"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Become a Doctor"
                android:id="@+id/d_tv1"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />
                </LinearLayout>
            <include layout="@layout/become_doctor_form"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:id="@+id/add_new_prof_ll_layout_card2"
                android:background="#9ae1dfdf"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:background="@drawable/c4"
                    android:padding="20dp"
                    android:id="@+id/r_card1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="80dp"
                    android:src="@drawable/r"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Become a Retailer"
                    android:gravity="center"
                    android:id="@+id/r_tv1"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <include layout="@layout/become_retailer_form"/>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>