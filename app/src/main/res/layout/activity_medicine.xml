<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/med_activity_layout"
    tools:context=".Patient.MedicineActivity">

    <include layout="@layout/app_bar_patient"
        android:id="@+id/app_bar_medicine"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/upload_prescription"
            android:background="@drawable/search_back"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/google"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Prescription"
                android:textColor="#000000"
                android:textSize="13dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/upload_prescription"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"

            android:weightSum="2"
            >
            <EditText
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="  CITY NAME"/>
            <EditText
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edit_text_background"
                android:hint="  PINCODE"
                />
        </LinearLayout>


        <EditText

            android:padding="5dp"
            android:gravity="top"
            android:background="@drawable/edit_text_background"
            android:id="@+id/editText"
            android:layout_width="367dp"
            android:layout_height="262dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="151dp"
            android:ems="10"
            android:inputType="textMultiLine"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/upload_prescription"
            android:layout_marginTop="127dp"
            android:text="Comments: "
            android:textColor="#000"
            android:textStyle="bold"
            />

        <android.support.v7.widget.CardView
            android:layout_width="141dp"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/upload_prescription"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:elevation="15dp"
            app:cardBackgroundColor="@color/apple_red"
            android:id="@+id/med_btn_submit"
            app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/tv_med_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text=" SUBMIT" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>