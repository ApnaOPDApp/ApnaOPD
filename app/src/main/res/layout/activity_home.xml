<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Patient.HomeActivity">

<include layout="@layout/app_bar_patient"
    android:id="@+id/app_bar_home"
    />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
        android:layout_marginTop="61dp"
        android:layout_height="match_parent"
     >


        <android.support.v7.widget.CardView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:id="@+id/c1"
            >
            <RelativeLayout
                android:background="@drawable/color1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/google"
                    android:id="@+id/iv_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_1"
                    android:fontFamily="serif-monospace"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/iv_1"
                    android:layout_marginLeft="25dp"
                    android:text="Take Doctor's Appointment"
                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/c1"
            android:id="@+id/c2"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/color2"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/google"
                    android:id="@+id/iv_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_2"
                    android:fontFamily="serif-monospace"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/iv_2"
                    android:layout_marginLeft="25dp"
                    android:text="Pathology Service"
                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/cv_3"
            app:cardCornerRadius="5dp"
            android:id="@+id/cv_4"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/color4"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/google"
                    android:id="@+id/iv_4"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_4"
                    android:fontFamily="serif-monospace"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:layout_toRightOf="@id/iv_4"
                    android:layout_marginLeft="25dp"
                    android:text="Case Sheet  or Mediacl Report "
                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/c2"
            app:cardCornerRadius="5dp"
            android:id="@+id/cv_3"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:background="@drawable/color3"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/google"
                    android:id="@+id/iv_3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_3"
                    android:fontFamily="serif-monospace"
                    android:textColor="#000000"
                    android:textSize="18dp"

                    android:layout_toRightOf="@id/iv_3"
                    android:layout_marginLeft="25dp"
                    android:text="Medicines"
                    />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>



</RelativeLayout>
