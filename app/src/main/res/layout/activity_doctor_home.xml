<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.DoctorHomeActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        android:id="@+id/retailer_c1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/google"
                android:id="@+id/retailer_iv_1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/retailer_tv_1"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_toRightOf="@id/retailer_iv_1"
                android:layout_marginLeft="25dp"
                android:text="@string/manage_time_slabs"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/retailer_c1"
        android:id="@+id/retailer_c2"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/google"
                android:id="@+id/retailer_iv_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/retailer_tv_2"
                android:fontFamily="serif-monospace"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_toRightOf="@id/retailer_iv_2"
                android:layout_marginLeft="25dp"
                android:text="@string/view_appointments"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>