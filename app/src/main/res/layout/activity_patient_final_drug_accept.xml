<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient.PatientFinalDrugAcceptActivity">
    <include layout="@layout/app_bar_patient"
        android:id="@+id/drug_accept_layout"
        />

    <ScrollView
        android:padding="10dp"
        android:id="@+id/patient_quot_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/ll">

        <HorizontalScrollView
            android:id="@+id/table_horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/patient_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"></TableLayout>

            </RelativeLayout>

        </HorizontalScrollView>


    </ScrollView>

    <Button
        android:id="@+id/accept_offer"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/patient_quot_scroll_view"
        android:layout_marginEnd="17dp"
        android:background="@drawable/edit_text_background"
        android:elevation="15dp"
        android:text="Accept"
        android:textColor="@color/apple_blue"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="141dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="109dp"
        android:gravity="center"
        android:text="Deliver Status"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/packed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@color/apple_green" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shipped"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@color/apple_red" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reached"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@color/apple_red" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/received"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@color/apple_red" />

    </LinearLayout>



</RelativeLayout>