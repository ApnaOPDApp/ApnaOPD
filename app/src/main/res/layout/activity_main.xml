            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_userPWD"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginVertical="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_userID">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/text_colorSecondary"
                    android:inputType="textPassword"
                    android:textColor="@color/colorSecondaryDark"
                    android:hint="Password" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forget_password"
                android:text="Forget Password ?"
                android:textColor="@color/apple_blue"
                app:layout_constraintTop_toBottomOf="@id/til_userPWD"
                android:gravity="end"
                android:padding="3dp"
                />
            <Button
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/forget_password"
                android:text="Log In"
                android:textColor="@color/text_color_primary"
                android:background="@drawable/button_design"
                android:id="@+id/btn_login"
                />
                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_login"
                    android:text="Keep me logged in     "
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/cb_logged_in"
                    />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:foreground="@color/colorSecondaryAccent"
                android:outlineSpotShadowColor="@color/colorSecondary"
                android:outlineAmbientShadowColor="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/tv_login_alternatives"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cb_logged_in"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:text="Or Log In With"
                android:id="@+id/tv_login_alternatives"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_login_alternatives"
                android:text="Your Company Account"
                android:id="@+id/btn_company_account"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/btn_company_account"
                >
            <Button
                android:id="@+id/btn_google_login"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Google+"
                android:textColor="@color/apple_red"
                android:layout_weight="1"

                />

            <Button
                android:id="@+id/btn_facebook_login"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="@color/apple_blue"

             />

            </LinearLayout>
            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ll"
                android:layout_marginTop="8dp"
                android:text="Don't have an account? Sign up"
                android:textColor="@color/apple_blue"

                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    </ScrollView>

</android.support.constraint.ConstraintLayout>