<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#9cd1d1d1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textColor="@color/primary_dark"
            android:id="@+id/med_name1"
            />
        <TextView
            android:textColor="@color/primary_dark"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/med_price1"
            />
        <TextView
            android:textColor="@color/primary_dark"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offered_price"
            android:id="@+id/med_offer_price1"
            />
        <TextView
            android:textColor="@color/primary_dark"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosage Per Day"
            android:id="@+id/dosage_per1"
            />
        <TextView
            android:textColor="@color/primary_dark"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosage for no of days"
            android:id="@+id/dosage_day1"
            />
    </LinearLayout>


</RelativeLayout>