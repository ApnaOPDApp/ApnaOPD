<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e5e5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/doctores_card"
        app:cardElevation="10dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctors_profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cirimg3" />

                <ImageView
                    android:id="@+id/iv_nav_3"
                    android:layout_width="33dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/navigate_next" />

                <TextView
                    android:id="@+id/docters_card_name"
                    android:layout_width="196dp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/doctors_profile_image"
                    android:text="Dr. Shubham Singh"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctors_card_department"
                    android:layout_width="197dp"
                    android:layout_height="16sp"
                    android:layout_below="@id/docters_card_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/doctors_profile_image"
                    android:text="Department Name"
                    android:textColor="#707070" />

                <TextView
                    android:layout_width="195dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/doctors_card_department"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/doctors_profile_image"
                    android:inputType="textMultiLine"
                    android:maxLength="50"
                    android:maxLines="2"
                    android:text="ApnaOpd Registered Doctor"
                    android:textColor="#db807f7f" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="$500" />

            </RelativeLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#807f7f" />
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="7"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/dayLinear">

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon"
                    android:background="@drawable/chnage_color_on_click"
                    android:textSize="10sp"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue"
                    android:background="@drawable/chnage_color_on_click"
                    android:textSize="10sp"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Wed"
                    android:textSize="10sp"
                    android:background="@drawable/chnage_color_on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Thu"
                    android:textSize="10sp"
                    android:background="@drawable/chnage_color_on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Fri"
                    android:textSize="10sp"
                    android:background="@drawable/chnage_color_on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Sat"
                    android:textSize="10sp"
                    android:background="@drawable/chnage_color_on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:text="Sun"
                    android:textSize="10sp"
                    android:background="@drawable/chnage_color_on_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>